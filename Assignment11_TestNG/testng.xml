<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Calculator TestNG Assignment">
    <test name="Positive Tests">
        <groups>
            <run >
                <include name="positive"></include>
            </run>
        </groups>
        <classes>
            <class name="TestCalculatorAddition"></class>
            <class name="TestCalculatorSubtraction"></class>
            <class name="TestCalculatorMultiplication"></class>
            <class name="TestCalculatorDivision"></class>
        </classes>
    </test>
    <test name="Negative Tests">
        <groups>
            <run >
                <include name="negative"></include>
            </run>
        </groups>
        <classes>
            <class name="TestCalculatorAddition"></class>
            <class name="TestCalculatorSubtraction"></class>
            <class name="TestCalculatorMultiplication"></class>
            <class name="TestCalculatorDivision"></class>
        </classes>
    </test>
</suite>